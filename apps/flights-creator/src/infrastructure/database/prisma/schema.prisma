generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  BROKEN
  INFLIGHT
  REFLUENTING
}

model City {
  id Int @id @default(autoincrement())
  name String @unique
  county String
  createdAt DateTime @default(now())
  airplanes Airplane[]
}

model AirplaneStatus {
  id Int @id @default(autoincrement())
  status Status
  createdAt DateTime @default(now())
  airplanes Airplane[]
}

model Airplane {
  id Int @id @default(autoincrement())
  PID String @unique
  totalPlaces Int
  status AirplaneStatus @relation(references: [id], fields: [statusId])
  statusId Int
  createdAt DateTime @default(now())
  city City @relation(references: [id], fields: [cityId])
  cityId Int
}
