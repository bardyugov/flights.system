{
    "name": "flights-creator",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/flights-creator/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "webpack-cli build",
                "args": ["node-env=production"]
            },
            "configurations": {
                "development": {
                    "args": ["node-env=development"]
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "flights-creator:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "flights-creator:build:development"
                },
                "production": {
                    "buildTarget": "flights-creator:build:production"
                }
            }
        },
        "migration:generate": {
          "executor": "nx:run-commands",
          "options": {
            "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:generate ./src/infrastructure/database/migrations/{args.name} -d ./src/infrastructure/database/database.context.ts",
            "cwd": "apps/flights-creator"
          }
        },
      "migration:apply": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:run -d ./src/infrastructure/database/database.context.ts",
          "cwd": "apps/flights-creator"
        }
      },
      "seeds:run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/infrastructure/database/seeds/seeds.config.ts",
          "cwd": "apps/flights-creator"
        }
      }
    }
}
